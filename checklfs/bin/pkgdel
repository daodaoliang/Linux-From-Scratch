#!/bin/sh
# By Gerard Beekmans <gerard@linuxfromscratch.org>

if [ -z $1 ]
then
	echo "Usage: $0 logfile"
	exit 1
fi

echo && echo

cd /usr/share/checklfs/install-logs

echo "Starting deinstallation of $1, please stand by..."

for item in $(cat $1 | sort -r)
do
	if [ -f $item ] || [ -h $item ]
	then
		rm $item
	fi
done

for item in $(cat $1 | sort -r)
do
	if [ -d $item ]
	then
		rmdir $item
	fi
done

rm $1

echo "Deinstallation of $1 completed."

